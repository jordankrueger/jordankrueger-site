---
import BaseLayout from './BaseLayout.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: Date;
    updatedDate?: Date;
    coverImage?: string;
    coverAlt?: string;
    tags: string[];
  };
}

const { frontmatter } = Astro.props;

const dateStr = frontmatter.pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Rough reading time estimate
const content = await Astro.slots.render('default');
const words = content.replace(/<[^>]*>/g, '').split(/\s+/).length;
const readingTime = Math.max(1, Math.ceil(words / 250));
---

<BaseLayout title={`${frontmatter.title} â€” Jordan Krueger`} description={frontmatter.description} ogImage={frontmatter.coverImage}>
  <article class="blog-post">
    <div class="container">
      <header class="post-header">
        <div class="post-meta">
          <time datetime={frontmatter.pubDate.toISOString()}>{dateStr}</time>
          <span class="meta-sep">&middot;</span>
          <span>{readingTime} min read</span>
        </div>
        <h1>{frontmatter.title}</h1>
        {frontmatter.tags.length > 0 && (
          <div class="post-tags">
            {frontmatter.tags.map(tag => (
              <a href={`/blog?tag=${tag}`} class="post-tag">{tag}</a>
            ))}
          </div>
        )}
      </header>

      {frontmatter.coverImage && (
        <img src={frontmatter.coverImage} alt={frontmatter.coverAlt || frontmatter.title} class="post-cover" />
      )}

      <div class="post-content">
        <slot />
      </div>

      <footer class="post-footer">
        <a href="/blog" class="back-link">&larr; Back to all posts</a>
      </footer>
    </div>
  </article>

  <NewsletterSignup variant="compact" />
</BaseLayout>

<style>
  .blog-post {
    padding: var(--spacing-xl) 0;
  }

  .post-header {
    max-width: 720px;
    margin: 0 auto var(--spacing-lg);
  }

  .post-meta {
    font-size: 0.85rem;
    color: var(--color-text-light);
    margin-bottom: var(--spacing-xs);
  }

  .meta-sep {
    margin: 0 0.4rem;
  }

  .post-header h1 {
    font-size: 2.25rem;
    margin-bottom: var(--spacing-sm);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .post-tag {
    font-size: 0.8rem;
    padding: 0.2rem 0.7rem;
    border-radius: 1rem;
    background: var(--color-bg);
    color: var(--color-text-light);
    text-decoration: none;
  }

  .post-tag:hover {
    background: var(--color-bg-warm);
    color: var(--color-accent);
  }

  .post-cover {
    max-width: 720px;
    width: 100%;
    margin: 0 auto var(--spacing-lg);
    display: block;
    border-radius: var(--radius-md);
  }

  .post-content {
    max-width: 720px;
    margin: 0 auto;
  }

  .post-content :global(h2) {
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-sm);
  }

  .post-content :global(h3) {
    margin-top: var(--spacing-md);
    margin-bottom: var(--spacing-xs);
  }

  .post-content :global(p) {
    margin-bottom: 1rem;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: 1rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.4rem;
  }

  .post-content :global(blockquote) {
    border-left: 3px solid var(--color-accent);
    padding-left: var(--spacing-sm);
    margin: var(--spacing-sm) 0;
    font-style: italic;
    color: var(--color-text-light);
  }

  .post-content :global(pre) {
    background: #2d2d2d;
    color: #f8f8f2;
    padding: 1rem;
    border-radius: var(--radius-sm);
    overflow-x: auto;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .post-content :global(code) {
    background: var(--color-bg);
    padding: 0.15rem 0.4rem;
    border-radius: 0.2rem;
    font-size: 0.9em;
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .post-content :global(img) {
    border-radius: var(--radius-sm);
    margin: var(--spacing-sm) 0;
  }

  .post-footer {
    max-width: 720px;
    margin: var(--spacing-xl) auto 0;
    padding-top: var(--spacing-md);
    border-top: 1px solid var(--color-border);
  }

  .back-link {
    font-weight: 500;
  }

  @media (max-width: 640px) {
    .post-header h1 {
      font-size: 1.75rem;
    }
  }
</style>
