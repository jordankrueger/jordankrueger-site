---
interface Props {
  variant?: 'default' | 'compact';
  id?: string;
}
const { variant = 'default', id = 'subscribe' } = Astro.props;
---

<div class:list={["newsletter-wrap", variant]} id={id}>
  <section class:list={["newsletter-panel", variant]}>
    <div class="newsletter-inner">
      <div class="newsletter-text">
        <p class="newsletter-label">Subscribe to</p>
        <p class="newsletter-title">Mission Control ➡️</p>
        <hr class="newsletter-divider" />
      </div>
      <div class="newsletter-form-wrap">
        <p class="newsletter-desc">I share thoughts on online tools, learnings from my nonprofit advocacy consulting business, projects I'm launching, Artificial Intelligence, and personal updates — directly to your inbox.</p>
        <form method="post" action="https://progressives-signup.restless-salad-a31e.workers.dev" class="newsletter-form">
          <input type="email" name="your-email" placeholder="Your email" required maxlength="256" />
          <button type="submit" class="btn btn-primary">Subscribe</button>
        </form>
      </div>
    </div>
  </section>
</div>

<style>
  .newsletter-wrap {
    padding: var(--spacing-md) var(--spacing-md);
  }

  .newsletter-panel {
    max-width: var(--max-width);
    margin: 0 auto;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg) var(--spacing-lg);
  }

  .newsletter-panel.default {
    background-color: var(--color-bg-warm);
  }

  .newsletter-panel.compact {
    background-color: var(--color-bg-peach);
  }

  .newsletter-inner {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: var(--spacing-lg);
    align-items: center;
  }

  .newsletter-label {
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.25rem;
  }

  .newsletter-title {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-weight: 700;
  }

  .newsletter-divider {
    border: none;
    border-top: 2px solid var(--color-border);
    margin-top: var(--spacing-sm);
    width: 60px;
  }

  .newsletter-desc {
    font-size: 0.95rem;
    margin-bottom: var(--spacing-sm);
  }

  .newsletter-form {
    display: flex;
    gap: 0.5rem;
  }

  .newsletter-form input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    font-family: var(--font-body);
    font-size: 0.95rem;
    background: var(--color-bg-white);
  }

  .newsletter-form input:focus {
    outline: 2px solid var(--color-accent);
    outline-offset: -1px;
    border-color: var(--color-accent);
  }

  @media (max-width: 640px) {
    .newsletter-wrap {
      padding: var(--spacing-md) var(--spacing-sm);
    }

    .newsletter-panel {
      padding: var(--spacing-md) var(--spacing-sm);
      border-radius: var(--radius-md);
    }

    .newsletter-inner {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }

    .newsletter-form {
      flex-direction: column;
    }
  }
</style>
