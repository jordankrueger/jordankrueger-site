<div class="contact-wrap" id="contact">
  <section class="contact-panel">
    <div class="contact-inner">
      <div class="contact-heading">
        <h2>Let's connect!</h2>
        <hr class="section-rule" />
      </div>
      <div class="contact-form-wrap">
        <form id="contact-form" class="contact-form">
          <input type="text" name="name" placeholder="Your name" maxlength="128" required />
          <input type="email" name="email" placeholder="Your email address" maxlength="128" required />
          <textarea name="message" placeholder="What should we talk about?" maxlength="16384" rows="5" required></textarea>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </section>
</div>

<style>
  .contact-wrap {
    padding: 0 var(--spacing-md);
  }

  .contact-panel {
    max-width: var(--max-width);
    margin: var(--spacing-md) auto;
    background-color: var(--color-bg-blue);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg) var(--spacing-lg);
  }

  .contact-inner {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: var(--spacing-lg);
    align-items: start;
  }

  .contact-heading h2 {
    margin-bottom: var(--spacing-xs);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .contact-form input,
  .contact-form textarea {
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    font-family: var(--font-body);
    font-size: 0.95rem;
    background: var(--color-bg-white);
    resize: vertical;
  }

  .contact-form input:focus,
  .contact-form textarea:focus {
    outline: 2px solid var(--color-accent);
    outline-offset: -1px;
    border-color: var(--color-accent);
  }

  @media (max-width: 640px) {
    .contact-panel {
      padding: var(--spacing-md) var(--spacing-sm);
      border-radius: var(--radius-md);
    }

    .contact-inner {
      grid-template-columns: 1fr;
    }
  }
</style>
